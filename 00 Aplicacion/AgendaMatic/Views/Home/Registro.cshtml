@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Registro</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>

<body class="text-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-4">

            </div>
            <div class="col-4">
                <form class="form-signin" onsubmit="return false;">
                    <br />
                    <h1 class="h3 mb-3 font-weight-normal">Registro en AgendaMatic</h1>
                    <br />
                    <label for="inputNombre" class="sr-only">Ingrese Nombre</label>
                    <input type="email" id="inputNombre" class="form-control" placeholder="Nombre" required autofocus>
                    <br />
                    <label for="inputApellido" class="sr-only">Ingrese Apellido</label>
                    <input type="email" id="inputApellido" class="form-control" placeholder="Apellido" required autofocus>
                    <br />
                    <label for="inputEmail" class="sr-only">Ingrese Correo</label>
                    <input type="email" id="inputEmail" class="form-control" placeholder="correo" required autofocus>
                    <br />
                    <label for="inputPassword" class="sr-only">Ingrese Contraeña</label>
                    <input type="password" id="inputPassword" class="form-control" placeholder="contrasena" required>
                    <br />
                    <button class="btn btn-lg btn-primary btn-block" onclick="registro();">Registro</button>
                    <br />
                    <br />
                    <div id='alert' class='hide'></div>
                </form>
            </div>
            <div class="col-4">

            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-4">

            </div>
            <div class="col-4">
                <div class="container">
                    <br />
                    <a asp-area="" asp-controller="Home" asp-action="Login">Volver al Login</a>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</body>
</html>