@model HomeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Registro</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>

<body class="text-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-4">

            </div>
            <div class="col-4">
                <form class="form-signin" onsubmit="return false;">
                    <br />
                    <h1 class="h3 mb-3 font-weight-normal">Registro en AgendaMatic</h1>
                    <br />
                    <label for="inputNombreCita" class="sr-only">Ingrese Nombre Cita</label>
                    <input type="email" id="inputNombreCita" class="form-control" placeholder="Nombre Cita" required autofocus>
                    <br />
                    <label for="inputDescripcion" class="sr-only">Ingrese Descripcion</label>
                    <input type="email" id="inputDescripcion" class="form-control" placeholder="Descripcion" required autofocus>
                    <br />
                    <label for="inputEmail" class="sr-only">Hora y fecha Bloque</label>
                    <input size="16" type="text" class="form-control" id="datetime" value="@Model.TextoHorarioBloque" readonly>
                    <br />
                    <button class="btn btn-lg btn-primary btn-block" onclick="agendarCita(@Model.IdBloque)">Agendar</button>
                    <br />
                    <br />
                    <div id='alertAgendar' class='hide'></div>
                </form>
            </div>
            <div class="col-4">

            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-4">

            </div>
            <div class="col-4">
                <div class="container">
                    <br />
                    <a asp-area="" asp-controller="Home" asp-action="Index">Volver a la pagina principal</a>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</body>
</html>
